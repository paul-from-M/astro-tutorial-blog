---
import BlogPost from '../../components/BlogPost.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
    const allPosts = await Astro.glob('../posts/*.md');
    const uniqueTags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
    return [
        uniqueTags.map(currentTag => ({params: { tag: currentTag}, props: {posts: allPosts.filter((post) => post.frontmatter.tags.includes(currentTag))}}))
    ];
}

const { tag } = Astro.params;
const { posts } = Astro.props;

---
<BaseLayout pageTitle={tag}>
  <p>Posts tagged with {tag}</p>
  <ul>
    {posts.map(post => <BlogPost url = {post.frontmatter.image.url} title = {post.frontmatter.title}/>) }
  </ul>
</BaseLayout>